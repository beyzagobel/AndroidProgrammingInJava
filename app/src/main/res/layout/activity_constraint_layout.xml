<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConstraintLayoutActivity">

    <!-- 3.pdf-->

    <TextView
        android:id="@+id/lblIsim"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="İsim:"
        app:layout_constraintBaseline_toBaselineOf="@+id/txtIsım"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtIsım"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:inputType="text"
        android:hint="isim"
        app:layout_constraintLeft_toRightOf="@+id/lblIsim"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblSoyisim"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="Soyisim:"
        app:layout_constraintBaseline_toBaselineOf="@+id/txtSoyisim"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblIsim" />

    <EditText
        android:id="@+id/txtSoyisim"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="soyisim"
        android:inputType="text"
        app:layout_constraintLeft_toRightOf="@+id/lblSoyisim"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtIsım" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kaydet"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtSoyisim" />
</androidx.constraintlayout.widget.ConstraintLayout>